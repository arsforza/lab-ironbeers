<div class="beer-card">
    <div class="image-container"><img src="{{this.image_url}}" alt="beer-photo"></div>
    <div class="beer-info">
        <a href="/beers/beer-{{this.id}}"><h3 class="beer-name">{{this.name}}</h3></a>
        <p class="tagline">{{this.tagline}}</p>
        <p>{{this.description}}</p>
        <div class="additional-info">
            <h4>Food Pairing</h4>
            <ul>
                {{#each this.food_pairing}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
            <p><strong>Brewers Tips:</strong> {{this.brewers_tips}}</p>
        </div>
    </div>
</div>